<section class="posts">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 class="center">Categories</h1>

        <div class="row">
          <% @categories.each do |category| %>
              <div class="col-xs-4">
                <div class="post-title">

                  <%= link_to "##{category.name}", category_path(category) %>

                </div>

                <% if logged_in? && current_user == category.user %>
                    <div class="post-actions">

                      <%= link_to "Edit this category", edit_category_path(category), class: "btn btn-xs btn-primary" %>

                      <%= link_to "Delete this category", category_path(category), method: :delete,

                                  data: {confirm: "Are you sure you want to delete this category?"},

                                  class: "btn btn-xs btn-danger" %>
                    </div>
                <% end %>
              </div>
          <% end %>
        </div>

      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4 center">
        <%= will_paginate %>
      </div>
    </div>
  </div>
</section>