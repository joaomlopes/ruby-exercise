<section class="users">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h1 class="center"><%= @user.name %>'s Profile Page</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-4 col-md-offset-4 center">
        <%= gravatar_for @user, size: 150 %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <h1 class="center"><%= @user.name %>'s Posts</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <%= render 'posts/post', obj: @user_posts %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4 center">
        <%= will_paginate @user_posts %>
      </div>
    </div>
  </div>
</section>
