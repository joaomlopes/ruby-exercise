<section class="users">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h1 class="center">Edit Account</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">

        <%= render 'form' %>

      </div>
    </div>
    <div class="row">
      <div class="col-xs-5 col-xs-offset-2">
        <p><%= link_to 'Go Back to Home', root_path %></p>
      </div>
      <div class="col-xs-5 right">
        <p>
          <%= link_to "Delete Account", users_path(@user), method: :delete, data: {confirm: "Are you sure you want to delete the account?"},
                      class: "btn btn-md btn-danger" %>
        </p>
      </div>
    </div>
  </div>
</section>
