<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <%= render 'shared/errors', obj: @user %>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :name %>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control", placeholder: "Enter Name", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :email %>
      </div>
      <div class="col-sm-10">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter E-mail Address" %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :password %>
      </div>
      <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter Password" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary btn-lg') %>
      </div>
    </div>
<% end %>