<section class="posts">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 class="center">All of our Bloggers</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 center">
        <% @users.each do |user| %>

            <ul class="listing">

              <div class="row">

                <div class="well col-md-4 col-md-offset-4">

                  <li><%= link_to gravatar_for(user), user_path(user) %></li>

                  <li class="article-title">

                    <%= link_to user.name, user_path(user) %>

                  </li>

                  <li><small><%= pluralize(user.posts.count, "post") if user.posts %></small></li>

                </div>

              </div>

            </ul>

        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4 center">
        <%= will_paginate %>
      </div>
    </div>
  </div>
</section>