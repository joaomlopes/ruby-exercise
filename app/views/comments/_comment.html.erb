<div class="row">
  <div class="col-sm-12 comment-content">
    <div class="row comment-row">
      <div class="col-xs-2 center">
        <ul class="listing">
          <li>
            <%= link_to gravatar_for(comment.user), user_path(comment.user) %>
          </li>
          <li class="article-title">
            <%= link_to comment.user.name, user_path(comment.user) %>
          </li>
        </ul>
      </div>
      <div class="col-xs-8">
        <%= comment.body %>
      </div>
    </div>
    <div class="row comment-actions">
      <div class="col-xs-12">
        <% if logged_in? && current_user == comment.user %>

            <%= link_to "Delete this comment", [comment.post, comment], method: :delete,

                        data: {confirm: "Are you sure you want to delete this comment?"},

                        class: "btn btn-xs btn-danger" %>

        <% end %>
      </div>
    </div>
  </div>
</div>