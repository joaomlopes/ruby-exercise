<%= form_for([@post, @post.comments.build]) do |f| %>

    <div class="form-group">
      <div class="col-sm-12">
        <%= f.text_area :body, rows: 5, class: "form-control", placeholder: "Enter your comment" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-12 right">
        <%= f.submit "Comment", class: 'btn btn-primary btn-lg' %>
      </div>
    </div>

<% end %>